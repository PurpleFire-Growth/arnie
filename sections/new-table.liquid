<style>
    .table-container{
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .comparison-table {
        width: 90%;
        border-collapse: collapse;
       
      }
      th{
       background-color:white;
      }

      td, th{
       border: 0px;
    }
      
      .comparison-table th,
      .comparison-table td {
        {% comment %} border: 1px solid #ddd; {% endcomment %}
        padding: 10px;
        text-align: center;
        align-content: center;
      }
      
      .comparison-table th {
        font-weight: bold;
      }
      
      .comparison-table .icon {
        display: block;
        margin: 0 auto;
        max-height: 40px;
      }
      
      .comparison-table .value {
        font-size: 16px;
        color: #555;
      }
      
      .value{
       font-weight: 600;
       text-align: left;
       padding: 0px 10px;
    }
    .heading-center{
        {% comment %} text-align: -webkit-center;
        text-align: center !important; {% endcomment %}
        align-content: center;
    }
    tr:nth-child(odd){
     background-color: #F7F7F7;
    }

    tr:nth-child(even){
        background-color: #ffffff;
    }
</style>

<div class="table-container">
<table class="comparison-table">
    <thead>
      <tr>
       {%- for i in (1..3) -%}
            {%- assign image_key = "image_" | append: i -%}
            {%- if section.settings[image_key] != blank -%}
                <th class="heading-center">
                <img src="{{ section.settings[image_key] | image_url: width: 150 }}" alt="Image {{ i }}" style="display: block; margin: 0 auto; max-width: 150px; height: auto;">
                </th>
            {%- endif -%}
        {%- endfor -%}

      </tr>
    </thead>
    <tbody>
      {%- for block in section.blocks -%}
        <tr>
          {%- for i in (1..3) -%}
            {%- assign value_key = "value_" | append: i -%}
            {%- assign icon_key = "icon_" | append: i -%}
  
            <td>
                <div class="icon-row">
                    {%- if block.settings[icon_key] != blank -%}
                        <img src="{{ block.settings[icon_key] | image_url: width: 150 }}" alt="Icon {{ i }}" class="icon">
                    {%- endif -%}
                </div>
              {%- if block.settings[value_key] != blank -%}
                <p class="value">{{ block.settings[value_key] | strip_html }}</p>
              {%- endif -%}
            </td>
          {%- endfor -%}
        </tr>
      {%- endfor -%}
    </tbody>
  </table>
</div>  
  {% schema %}

  {
    "name": "New Table",
    "settings": [
      {
        "type": "image_picker",
        "id": "image_1",
        "label": "image_1"
      },
      {
        "type": "image_picker",
        "id": "image_2",
        "label": "image 2"
      },
      {
        "type": "image_picker",
        "id": "image_3",
        "label": "image_3"
      }
    ],
    "blocks": [
      {
        "name": "Row",
        "type": "row",
        "settings": [
          {
            "type": "richtext",
            "id": "value_1",
            "label": "Value 1"
          },
          {
            "type": "image_picker",
            "id": "icon_1",
            "label": "Icon 1"
          },
          {
            "type": "richtext",
            "id": "value_2",
            "label": "Value 2"
          },
          {
            "type": "image_picker",
            "id": "icon_2",
            "label": "Icon 2"
          },
          {
            "type": "richtext",
            "id": "value_3",
            "label": "Value 3"
          },
          {
            "type": "image_picker",
            "id": "icon_3",
            "label": "Icon 3"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "New Table",
        "blocks": [
          {
            "type": "row",
            "settings": {
              "value_1": "<p>Value 1</p>",
              "value_2": "<p>Value 2</p>",
              "value_3": "<p>Value 3</p>",

            }
          }
        ]
      }
    ]
  }
  
  
{% endschema %}  